{
  "body-style": {
    "body_bg_color": {
      "control": "color",
      "label": "Color de Fondo del Cuerpo",
      "default": "#FFFFFF",
      "selector": "body",
      "property": "background-color"
    },
    "body_p_margin_bottom": {
      "control": "text",
      "label": "Margen inferior de párrafo",
      "default": "2em",
      "selector": "main p",
      "property": "margin-bottom"
    },
    "body_h1_margin_bottom": {
      "control": "text",
      "label": "Margen inferior de H1",
      "default": "1em",
      "selector": "main h1",
      "property": "margin-bottom"
    }
  },
  "footer-style": {
    "footer_bg_color": {
      "control": "color",
      "label": "Color de Fondo del Footer",
      "default": "#ACACAC",
      "selector": "footer",
      "property": "background-color"
    },
    "footer_text_color": {
      "control": "color",
      "label": "Color de Fondo del Footer",
      "default": "#FFFFFF",
      "selector": "footer",
      "property": "color"
    },
    "footer_copyright": {
      "control": "text",
      "label": "Texto del Copyright",
      "default": ""
    }
  },
  "header-style": {
    "head_bg_color": {
      "control": "color",
      "label": "Color de Cabecera",
      "default": "#ACACAC",
      "selector": "header",
      "property": "background-color"
    },
    "head_text_color": {
      "control": "color",
      "label": "Color del Texto de Cabecera",
      "default": "#FFFFFF",
      "selector": "header",
      "property": "color"
    },
    "head_link_color": {
      "control": "color",
      "label": "Color de Enlaces en Cabecera",
      "default": "#0d6efd",
      "selector": "header a",
      "property": "color"
    },
    "head_link_hover_color": {
      "control": "color",
      "label": "Color de Enlaces en Cabecera",
      "default": "#0a58ca",
      "selector": "header a:hover",
      "property": "color"
    },
    "head_menu": {
      "control": "checkbox",
      "label": "Menú en cabecera",
      "default": "true"
    },
    "head_menu_valign": {
      "control": "select",
      "label": "Alineamiento Vertical del Menú",
      "default": "center",
      "selector": "header div#primary-menu",
      "property": "align-items"
    },
    "head_menu_halign": {
      "control": "select",
      "label": "Alineamiento Horizontal del Menú",
      "default": "flex-end",
      "selector": "header div#primary-menu",
      "property": "justify-content"
    }
  },
  "hero": {
    "hero_page_active": {
      "control": "checkbox",
      "label": "Activación del Hero en Páginas",
      "default": "true"
    },
    "hero_page_height": {
      "control": "number",
      "label": "Alto en Píxeles del Hero en Páginas",
      "default": 550,
      "selector": "body.page div.hero_container",
      "property": "height"
    }
    "hero_page_valign": {
      "control": "select",
      "label": "Alineamiento Vertical del Título en el HERO en Páginas",
      "default": "center",
      "selector": "body.page div.title_container.container",
      "property": "align-items"
    },
    "hero_page_halign": {
      "control": "select",
      "label": "Alineamiento Horizontal del Título en el HERO en Páginas",
      "default": "center",
      "selector": "body.page div.title_container.container",
      "property": "justify-content"
    }
    "hero_blog_active": {
      "control": "checkbox",
      "label": "Activación del Hero en Blog",
      "default": "true"
    }
    "hero_blog_height": {
      "control": "number",
      "label": "Alto en Píxeles del Hero en Páginas",
      "default": 550,
      "selector": "body.single div.hero_container",
      "property": "height"
    }
    "hero_blog_valign": {
      "control": "select",
      "label": "Alineamiento Vertical del Título en el HERO en Posts",
      "default": "center",
      "selector": "single.page div.hero_title.container",
      "property": "align-items"
    },
    "hero_blog_halign": {
      "control": "select",
      "label": "Alineamiento Horizontal del Título en el HERO en Posts",
      "default": "center",
      "selector": "single.page div.hero_title.container",
      "property": "justify-content"
    }

  },
  "title_tagline": {
    "title_logo": {
      "label": "Logo",
      "control": "image",
      "default": ""
    }
  }
}
